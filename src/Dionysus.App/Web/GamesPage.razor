    }
    .butt {
        background-color: #161b22;
        color: #c6cdd5;
        border-radius: 20px;
        border-style: solid;
        border-color: #32362d;
        border-width: 0.2px;
        padding: 0; 
        height: 35px;
        width: 60px; 
        display: flex; 
        justify-content: center; 
        align-items: center;
        margin-left: 5px;
        font-size: 12px;
        cursor: pointer;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
        transition: background-color 0.3s, transform 0.3s;
    }
    .butt:hover{
        background-color: #0d1117;
        transform: scale(1.03);
        cursor: pointer;
    }
    .butt:active{
        transform: scale(0.97);
    }
    input {
        border-radius: 20px;
        font-family: "JetBrains Mono", monospace;
        width: 70%;
        padding: 10px;
        padding-left: 18px;
        margin-right: 10px;
        border-style: solid;
        max-width: 500px;
        border-color: #32362d;
        border-width: 0.2px;
        background-color: #161b22;
        color: #c6cdd5;
