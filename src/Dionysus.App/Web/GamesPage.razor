    }
    input::placeholder{
        color: #89929b;
    }
    .game-list {
        max-width: 900px;
        font-family: "JetBrains Mono", monospace;
        margin: 0 auto;
        user-select: none;
        background-color: #0d1117;
        color: white;
        padding: 20px;
        display: flex;
        flex-direction: column;
        gap: 15px;
    }
    .game-item {
        aspect-ratio: 16/9;
        height: auto;
        min-height: 200px;
        max-height: 250px;
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        align-items: flex-start;
        background-color: #1f1d2e;
        border-radius: 20px;
        border: 0.2px solid #32362d;
        padding-left: 15px;
        padding-bottom: 10px;
        margin-top: 10px;
